* {
  font-family: "Font Awesome 7 Free", "Font Awesome 7 Brands", "JetBrainsMono Nerd Font", monospace;
  font-weight: 900;
}


window#waybar {
    background: rgba(20, 20, 20, 0.95); /* fondo opaco para visibilidad */
    color: #e0e0e0;
    border: 1px solid rgba(100, 100, 100, 0.35);
    border-radius: 12px;
    margin: 8px;
    padding: 0 12px;
}

#workspaces button {
    font-family: "Font Awesome 6 Free";
    font-weight: 900; /* importante para mostrar los íconos sólidos */
    color: #aaa; /* color inactivo */
    margin: 0 2px;
    border: none;
    background: transparent;
    transition: color 0.3s ease;
}

#workspaces button.active {
    color: #fff; /* color activo */
}

#workspaces button:hover {
    color: #ddd;
}

#clock {
    font-size: 14px;
    font-weight: 600;
    padding: 0 20px;
}

#pulseaudio,
#network,
#custom-power {
    padding: 0 10px;
    margin: 0 2px;
}

#pulseaudio {
    color: #ffffff;
}

#pulseaudio.muted {
    color: #ffffff;
}

#network {
    color: #ffffff;
}

#network.disconnected {
    color: #ffffff;
}

#custom-power {
    color: #ffffff;
    font-size: 15px;
    margin-left: 8px;
    padding-right: 8px;
}

#custom-power:hover {
    color: #ffffff;
}

